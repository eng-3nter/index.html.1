<script>
const noBtn=document.getElementById("noBtn");
const yesBtn=document.getElementById("yesBtn");
const main=document.getElementById("main");
const passwordSection=document.getElementById("passwordSection");
const finalMessage=document.getElementById("finalMessage");
const kissSound=document.getElementById("kissSound");
let attempts=3;

document.addEventListener("mousemove",e=>{
let rect=noBtn.getBoundingClientRect();
let distance=Math.hypot(e.clientX-rect.x,e.clientY-rect.y);
if(distance<100){
noBtn.style.left=Math.random()*window.innerWidth+"px";
noBtn.style.top=Math.random()*window.innerHeight+"px";
}
});

yesBtn.onclick=()=>{
main.style.display="none";
passwordSection.style.display="block";
kissSound.play();
document.body.classList.add("shake");
setTimeout(()=>document.body.classList.remove("shake"),500);
};

function checkPassword(){
let input=document.getElementById("passwordInput").value;
if(input==="892006"){
passwordSection.style.display="none";
finalMessage.style.display="block";
createHearts();
}else{
attempts--;
document.getElementById("attemptsText").innerText="Attempts left: "+attempts;
createBroken();
document.body.classList.add("shake");
setTimeout(()=>document.body.classList.remove("shake"),500);
if(attempts<=0){
setTimeout(()=>{window.location.href="about:blank";},2000);
}
}
}

function createHearts(){
for(let i=0;i<40;i++){
let heart=document.createElement("div");
heart.classList.add("heart");
heart.innerHTML="â¤ï¸";
heart.style.left=Math.random()*window.innerWidth+"px";
heart.style.top=window.innerHeight+"px";
document.body.appendChild(heart);
setTimeout(()=>heart.remove(),4000);
}
}

function createBroken(){
for(let i=0;i<20;i++){
let broken=document.createElement("div");
broken.classList.add("broken");
broken.innerHTML="ğŸ’”";
broken.style.left=Math.random()*window.innerWidth+"px";
broken.style.top=window.innerHeight+"px";
document.body.appendChild(broken);
setTimeout(()=>broken.remove(),4000);
}
}

/* Ù†Ø¬ÙˆÙ… */
const canvas=document.getElementById("stars");
const ctx=canvas.getContext("2d");
canvas.width=window.innerWidth;
canvas.height=window.innerHeight;
let stars=[];
for(let i=0;i<200;i++){
stars.push({x:Math.random()*canvas.width,y:Math.random()*canvas.height,r:Math.random()*2});
}
function drawStars(){
ctx.clearRect(0,0,canvas.width,canvas.height);
ctx.fillStyle="white";
stars.forEach(s=>{
ctx.beginPath();
ctx.arc(s.x,s.y,s.r,0,Math.PI*2);
ctx.fill();
});
requestAnimationFrame(drawStars);
}
drawStars();
